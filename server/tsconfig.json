{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "sourceMap": true,
        "outDir": "./build",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "lib"]
}